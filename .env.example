# Environment
NODE_ENV=development

# Server
PORT=3000

# Database (MySQL)
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=my_database
DB_POOL_SIZE=10

# Authentication
JWT_SECRET=your_jwt_secret_here
PASSWORD_HASH=$2a$10$your_bcrypt_hash_here
JWT_EXPIRY=86400

# CORS (optionnel — si absent, toutes les origines sont autorisées)
# CORS_ORIGIN=https://example.com,https://app.example.com

# Pagination
DEFAULT_PAGE_LIMIT=10
MAX_PAGE_LIMIT=100
